{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "mail",
  "definitions": {
    "config":
      { "type": "object",
        "required": ["id","type","from","transport","templateDir","template"],
        "properties":{
          "id": {"type": "string"},
          "type": {"type": "string", "pattern": "\\bmail\\b"},
          "from":{"type":"string"},
          "transport":{"type":"string"},
          "templateDir":{"type":"string"},
          "template":{"type":"string"},
          "recipients": {"type": "array"}
      }
    },
    "params":
    { "type": "object",
      "required": ["id","message","title"],
      "properties":{
        "id": {"type": "string"},
        "title": {"type": "string"},
        "recipients": {"type": "array"},
        "attachments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "filename": {"type": "string"},
              "content": {"type": "string"},
              "path": {"type": "string"},
              "contentType": {"type": "string"},
              "encoding": {"type": "string"},
              "raw": {"type": "string"}
            }
          }
        },
        "message":{"type":"string"}
      }
    }
  }
}